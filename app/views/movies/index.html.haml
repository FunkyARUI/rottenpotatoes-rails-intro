-#  This file is app/views/movies/index.html.haml
%h1 All Movies 
-# checkbox
= form_tag movies_path, :method => :get :id=>'ratings_form' do 
  Include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]","1",(@ratings.include? rating), :id =>'ratings_#{{rating}}'
  = check_box_tag "ratings[hidden]","1",true,hidden:true
  = submit_tag 'Refresh', :id=>'ratings_submit'
  
%table#movies
  %thead
    %tr
      - if @sortby == "title"
        %th.hilite= link_to "Movie Title", movies_path(:sortby=>"title",  :ratings=>params[:ratings]),:id => 'title_header'
      - else
        %th= link_to "Movie Title", movies_path(:sortby=>"title",  :ratings=>params[:ratings]),:id => 'title_header'
      %th Rating
      - if @sortby == "release_date"
        %th.hilite= link_to "Release Date", movies_path(:sortby=>"release_date", :ratings=>params[:ratings]), :id => 'release_date_header'
      - else
        %th= link_to "Release Date", movies_path(:sortby=>"release_date", :ratings=>params[:ratings]), :id => 'release_date_header'
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
